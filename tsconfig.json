{
	"compilerOptions": {
		"lib": ["ESNext"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleDetection": "force",
		"allowJs": true,
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"strict": true,
		"baseUrl": "./src",
		"paths": {
			"@/*": ["./*"]
		},
		"typeRoots": ["./node_modules/@types", "./src/types"],
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true
	}
}
